@model LearningPlatform.ViewModels.StudyCourseViewModel;

@{
    ViewBag.Title = "Creating assignment";
    Layout = "_Layout";
}
<style>
    #nav-container {
    padding-left: 250px;
    }
</style>

<div class="container-fluid" style="margin: 0; padding: 0;">
    <div class="row-fluid">
        <div class="wrapper" style="margin-left: 145px;">
    
            <partial name="_CourseNav"/>
            <div class="container">
                <form method="post" asp-route-courseId="@Model.Course.Id" asp-route-moduleId="@Model.Module.Id" asp-controller="Assignment" asp-action="CreateAssignment">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-8">
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Assignment.Name"></label>
                                    <input asp-for="Assignment.Name" class="form-control"/>
                                    <span asp-validation-for="Assignment.Name" class="text-danger"></span>
                                </div>
                            </div>
                     
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Assignment.Order"></label>
                                    <input type="number" min="0" max="@(Model.Module.Lessons.Count + Model.Module.Assignments.Count)" value="@(Model.Module.Lessons.Count + Model.Module.Assignments.Count)" asp-for="Assignment.Order" class="form-control"/>
                                    <span asp-validation-for="Assignment.Order" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Assignment.Description"></label>
                                    <textarea asp-for="Assignment.Description" class="form-control"></textarea>
                                    <span asp-validation-for="Assignment.Description" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-8 offset-4 row">
                                    <div class="col">
                                        <input type="submit" class="btn btn-info w-100" value="Create"/>
                                    </div>
                                    <div class="col">
                                        <a asp-action="Study" asp-controller="Course" asp-route-courseId="@Model.Course.Id" class="btn btn-primary btn-success w-100">Back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>          
        
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
